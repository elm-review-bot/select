.select

    span
        cursor pointer

    .backdrop
        width 100vw
        height 100vh
        position fixed
        top 0
        left 0
        box-sizing border-box

    ol
        position fixed
        padding 8px 0
        box-shadow 0px 3px 1px -2px rgba(0, 0, 0, 0.2), 0px 2px 2px 0px rgba(0, 0, 0, 0.14), 0px 1px 5px 0px rgba(0, 0, 0, 0.12)
        background-color white
        list-style none
        width 160px
        height 192px
        overflow-x hidden
        overflow-y scroll

        li
            font-size 1rem
            line-height 1.75rem
            font-weight 400
            letter-spacing 0.00937em
            height 48px
            padding 0 16px
            display grid
            align-items center
            transition background-color 15ms linear
            cursor pointer

            &:hover
                background-color rgba(0,0,0,0.04)

            &.selected
                background-color rgba(0,0,0,0.08)

            &:active
                background-color rgba(0,0,0,0.16)


